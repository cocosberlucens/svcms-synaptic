{
  "name": "svcms-synaptic-mcp",
  "version": "0.1.0",
  "description": "SVCMS Synaptic MCP Server - Git-embedded memory system with semantic diff awareness",
  "private": true,
  "type": "module",
  "bin": {
    "svcms-synaptic-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsc --watch",
    "start": "node build/index.js",
    "prepare": "npm run build",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest"
  },
  "keywords": [
    "mcp",
    "svcms",
    "git",
    "memory",
    "ai",
    "claude",
    "semantic-commits",
    "ast-grep",
    "development-tools"
  ],
  "author": "Corrado Berlucchi <coco@example.com>",
  "contributors": [
    "Claude <noreply@anthropic.com>"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "simple-git": "^3.21.0",
    "@iarna/toml": "^2.2.5",
    "zod": "^3.22.4",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cocosberlucens/svcms-synaptic.git",
    "directory": "mcp-server"
  }
}